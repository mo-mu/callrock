<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_widget_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp">

    <ImageView
        android:id="@+id/img_main_widget"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="left|center"
        android:src="@drawable/ic_status_1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <TextView
                android:id="@+id/txt_address_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="위치"/>

            <ImageView
                android:id="@+id/btn_sync_widget"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:padding="5dp"
                android:src="@drawable/refresh_btn"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_status_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="보통"/>

        <TextView
            android:id="@+id/txt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:text="보통"/>

    </LinearLayout>

</LinearLayout>