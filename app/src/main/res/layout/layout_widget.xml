<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layout_widget_body"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ff000000"
                android:gravity="center"
                android:padding="10dp">

    <TextView
        android:id="@+id/txt_address_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="위치"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_time_sync_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="시간"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/img_main_widget"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_address_widget"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_status_1"/>

    <TextView
        android:id="@+id/txt_pm10_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_main_widget"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/img_main_widget"
        android:gravity="center"
        android:text="미세먼지\n16"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/txt_pm25_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_main_widget"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/txt_pm10_widget"
        android:gravity="center"
        android:text="초미세먼지\n16"
        android:textColor="@color/white"/>

    <ImageView
        android:padding="10dp"
        android:id="@+id/btn_sync_widget"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_time_sync_widget"
        android:src="@drawable/quantum_ic_refresh_white_24"/>
</RelativeLayout>